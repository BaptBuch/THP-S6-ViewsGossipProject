<html>
  <body class= bg-light>

    <header class="bg-dark pb-5">
    <section class="bg-dark text-light">
        <div class="container pt-5 pb-5 mt-lg-6">
          <div class="row pt-5 pb-5">
            <div class="col">
              <h3 class="display-5 fw-lighter ">Bienvenue sur </h3>
              <h1 class="display-1 fw-bold"> The GOSSIP PROJECT</h1>
              <div class="my-4">
                <p class="lead text-muted">Est-ce que vous voulez des gossip ? Créez-en un sans plus tarder !</p>
                
              </div>
              <div class="">
                <div class="row w-50 justify-content-start">
                  <div>
                    <%= link_to 'Balance ton potin !', new_gossip_path, class:"btn btn-warning" %>
                  </div>
                  
                </div>
              </div>
              
    
            </div>
          </div>
        </div>
        
    </section>
  </header>
















  <div class="container pt-5 pb-4 fw-bold">
    <h3 class="fw-bold display-5"> Les derniers gossips </h3>
  </div>


    <section class="container card-group">
    
      <% @gossips.each do |gossip| %> 
      
        <div class="row row-cols-1 row-cols-md-2 g-4">
          <div class="col">

            <div class="card m-3 bg-white text-dark" style="width: 18rem;">
              <p class="card-title text-muted text-center pt-3 small">Gossip numéro <%= gossip.id%></p>
              <img src="https://img.pngio.com/gossip-podcast-gossip-png-500_500.png" class="card-img-top" alt="...">
              <div class="card-body text-center">
                
                <p class="card-text ">Son titre: <%= gossip.title%></p>
                <p class="card-text text-primary small"> Son auteur : <%= gossip.user.first_name%> </p>
                <%= link_to "Lire son contenu", gossip_path(gossip.id), class:"btn btn-warning" %>
                <p class="card-text pt-3 "><%= gossip.likes.count %> <%= (gossip.likes.count) == 1 ? 'Like' : 'Likes'%></p>               
              </div>
            </div>
          </div>
        </div>
        
      <% end %>
    </section>

  </body>

</html>