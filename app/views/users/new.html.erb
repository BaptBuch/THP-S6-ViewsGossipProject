<html>
  <body>
    <!-- ... -->

    <% if @user.errors.any? %>
      <div class="alert alert-danger" role="alert">
        <p>Nous n'avons pas réussi à créer l'utilisateur pour la (ou les) raison(s) suivante(s) :</p>
        <ul>
          <% @user.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>  
    <% end %>

    <%= form_tag url_for(action: 'create'), method: "post" do %>
      <input type="hidden" name="authenticity_token" value=<%= form_authenticity_token %> >
      <%= label_tag 'Prénom' %>
      <%= text_field_tag 'first_name', @user.first_name %>
      <br /> <br />

      <%= label_tag 'Nom de famille' %>
      <%= text_field_tag 'last_name', @user.last_name%>
      <br /> <br />
      
      <%= label_tag 'Email' %>
      <%= text_field_tag 'email', @user.email %>
      <br /> <br />

      <%= label_tag 'Password' %>
      <%= text_field_tag 'password', @user.password %>
      <br /> <br />

      <%= submit_tag "Create User" %>

    <% end %>

     
  </body>
</html>